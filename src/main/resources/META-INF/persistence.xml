<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="petstore-pu" transaction-type="RESOURCE_LOCAL">

        <!-- Entity classes -->
        <class>fr.epsi.b32526.entity.Address</class>
        <class>fr.epsi.b32526.entity.Product</class>
        <class>fr.epsi.b32526.entity.PetStore</class>
        <class>fr.epsi.b32526.entity.Animal</class>
        <class>fr.epsi.b32526.entity.Fish</class>
        <class>fr.epsi.b32526.entity.Cat</class>

        <properties>
            <!-- JDBC connection â€“ H2 file-based (persists on disk, inspectable via any DB tool) -->
            <property name="jakarta.persistence.jdbc.driver"   value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url"      value="jdbc:h2:./petstore;AUTO_SERVER=TRUE"/>
            <property name="jakarta.persistence.jdbc.user"     value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate settings -->
            <!-- update = creates tables on first run, keeps data across restarts -->
            <property name="hibernate.hbm2ddl.auto"  value="update"/>
            <property name="hibernate.dialect"       value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.show_sql"      value="true"/>
            <property name="hibernate.format_sql"    value="true"/>
        </properties>

    </persistence-unit>

</persistence>
